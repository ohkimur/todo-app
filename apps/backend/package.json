{
  "name": "@todos/backend",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js",
    "default": "./dist/esm/index.js"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm compile:cjs && pnpm compile:esm",
    "clean": "shx rm -rf dist",
    "compile:cjs": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "compile:esm": "tsc -p tsconfig.esm.json && tsc-alias -p tsconfig.esm.json",
    "db:seed": "tsx ./prisma/seed.ts",
    "dev": "tsx watch --clear-screen=false ./src ./src/index.ts",
    "format": "prettier --write \"./**/*.{cjs,js,jsx,ts,tsx,css,sass,scss}\" --config ./.prettierrc.cjs",
    "postinstall": "pnpm prisma generate",
    "lint:fix": "eslint --fix \"./**/*.{cjs,js,jsx,ts,tsx}\"",
    "lint:staged": "lint-staged",
    "start": "pm2 start dist/cjs/src/index.js && pm2 logs"
  },
  "lint-staged": {
    "**/*.{cjs,js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "**/*.{css,scss,sass}": [
      "npx prettier --write"
    ],
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@todos/shared": "workspace:^0.0.1",
    "argon2": "^0.30.3",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pm2": "^5.2.2",
    "react-cookie": "^4.1.1"
  },
  "devDependencies": {
    "@todos/config": "workspace:^0.0.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "shx": "^0.3.4",
    "tsc-alias": "^1.8.2",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  }
}
